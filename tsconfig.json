{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "typeRoots": ["./scripts/rc-tools/typings", "./node_modules/@types"],
        "declaration": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "scripts",
        "lib",
        "build",
        "dist",
        ".storybook",
        "public"
    ]
}
